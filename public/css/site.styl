// Expandable footer button 
#collapse-button
  width 100%
  position fixed
  bottom 0px
  cursor pointer
  transition all cubic-bezier(0.250, 0.460, 0.450, 0.940) 600ms
  
  &.expanded
    transform translateY(-100px)
    opacity 1
    
  &.collapsed
    transform translateY(0px)
    opacity 0.5
  
  md-icon
    font-size 40px
    height 40px
    width 40px
    outline 0

.logo-avatar
  border-radius 50%
  transition opacity 1s ease-in-out, border ease-in-out 500ms
  background-size 50px 50px
  background-position center
  opacity 1.0
  border none
  
.logo-avatar:hover
  opacity 0.7
  
.unselectable
  user-select none 
  


.fadeable
  opacity 1.0
  
  &.ng-hide-add,
  &.ng-hide-remove
    transition all cubic-bezier(0.250, 0.460, 0.450, 0.940) 500ms
  
  &.ng-hide
    opacity 0.0

// Footer with options for application view
#footer
  position fixed
  bottom 0
  width 100%
  height 100px
  min-height 100px
  border-top solid 3px white
  transform translateY(0px)
  margin-top 0
  
  &.ng-hide-add,
  &.ng-hide-remove
    transition all cubic-bezier(0.250, 0.460, 0.450, 0.940) 600ms
    
  &.ng-hide
    transform translateY(100px)
    margin-top -100px
    






#aaa
  width 100%
  background red
  
  &.animable
    transition height cubic-bezier(0.250, 0.460, 0.450, 0.940) 600ms

  &.small
    height 240px
      
  &.full
    height 100%
    

#bbb
  width 100%
  background blue
  

#ccc
  width 100%
  background green
