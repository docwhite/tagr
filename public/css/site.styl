// Mixins
user-select(val)
  -webkit-user-select val
  -khtml-user-select val
  -moz-user-select val
  -ms-user-select val
  user-select val

// Styles
html, body
  overflow hidden
  background black
  color white
  

#app
  // Header on application view
  #header
    width 100%
    padding-top 60px
    padding-bottom 10px
    text-align center
    
    &.animable
      transition height cubic-bezier(0.250, 0.460, 0.450, 0.940) 600ms

    &.small
      height 340px
      border-bottom solid 3px white
        
    &.full
      height 100%
      border-bottom none

    p 
      cursor default
      margin 0
      padding 0
      
    #title
      color white
      font-family 'Lobster'
      font-size 100px
      border-style dotted
      border-color white
      border-image-source url('../img/dots.svg')
      border-image-slice 33% 33%
      border-width 13px 0 13px 0
      border-image-repeat round
    

  
  #products
    width 100%
    
    md-divider
      margin-top 0
      margin-bottom 0

    md-list
      padding-top 0
      
    md-list-item > p,
    md-list-item > ._md-list-item-inner > p,
    md-list-item ._md-list-item-inner > p,
    md-list-item ._md-list-item-inner > ._md-list-item-inner > p
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
      user-select none
      
    md-list-item > button
      transform translateY(-10px)



